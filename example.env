# node js data
SERVER_PORT=8080

# API Base URL (Swagger UI용 - 외부 서버에서 접속 시 실제 서버 주소 설정)
# API_BASE_URL=http://your-server-ip:8080/api 또는 API_BASE_URL=https://your-domain.com/api

# 설정하지 않으면 상대 경로
API_BASE_URL=http://localhost:8080/api

# node js 사용
MONGO_USER=user_name
MONGO_PASS=your_password
MONGO_HOST=database
MONGO_PORT=27017
MONGO_DB_NAME=bus_api_DB

# DB data
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your_password
MONGO_DB_NAME=bus_api_DB

# JWT Secret Key
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption Key (학교 포털 비밀번호 암호화용, 32자 이상 권장)
ENCRYPTION_KEY=your-encryption-key-at-least-32-characters-long

# 학교 포털 테스트 계정 (크롤링 테스트용)
# SCHOOL_PW는 암호화된 값 또는 평문 비밀번호 사용 가능
# 암호화하려면: node encrypt-password.js <비밀번호>
SCHOOL_ID=your_school_id
SCHOOL_PW=your_school_password_or_encrypted_password

# Naver Map API
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Ollama
# llama3.2:3b (약 2GB) - 8GB 서버에 적합, 성능과 메모리 균형 좋음
# llama3.2:1b (약 700MB) - 매우 가벼움, 성능은 약간 낮을 수 있음
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b