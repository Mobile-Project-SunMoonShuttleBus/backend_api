# node js data
SERVER_PORT=8080

# API Base URL (Swagger UI용 - 외부 서버에서 접속 시 실제 서버 주소 설정)
# API_BASE_URL=http://your-server-ip:8080/api 또는 API_BASE_URL=https://your-domain.com/api

# 설정하지 않으면 상대 경로
API_BASE_URL=http://localhost:8080/api

# node js 사용
MONGO_USER=user_name
MONGO_PASS=your_password
MONGO_HOST=database
MONGO_PORT=27017
MONGO_DB_NAME=bus_api_DB

# DB data
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your_password
MONGO_DB_NAME=bus_api_DB

# JWT Secret Key
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption Key (학교 포털 비밀번호 암호화용, 32자 이상 권장)
ENCRYPTION_KEY=your-encryption-key-at-least-32-characters-long


# Naver Map API
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Docker Compose: http://ollama:11434
# 로컬 개발: http://localhost:11434
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=orca-mini:3b
